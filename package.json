{
  "name": "mdbxjs",
  "version": "1.0.17",
  "description": "Node.js binding for libmdbx - a fast, compact, embeddable key-value database",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "preinstall": "node scripts/install.js",
    "install": "node-gyp rebuild",
    "prepare": "node scripts/install.js && node-gyp rebuild",
    "test": "jest",
    "build": "node-gyp rebuild",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "database",
    "key-value",
    "mdbx",
    "libmdbx",
    "lmdb",
    "storage",
    "embedded",
    "nosql"
  ],
  "author": "Anders Brownworth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anders94/mdbxjs.git"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^5.0.0",
    "node-gyp": "^9.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "eslint": "^8.33.0",
    "jest": "^29.4.1",
    "prettier": "^2.8.3",
    "typescript": "^4.9.5"
  },
  "gypfile": true,
  "directories": {
    "example": "examples",
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib/",
    "src/",
    "scripts/",
    "deps/",
    "binding.gyp",
    "src/mdbx_wrapper.h",
    "src/inline_mdbx.h",
    "src/mdbx_shim.c"
  ],
  "bugs": {
    "url": "https://github.com/anders94/mdbxjs/issues"
  },
  "homepage": "https://github.com/anders94/mdbxjs#readme"
}
